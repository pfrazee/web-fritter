{
  "name": "nanoresource-promise",
  "version": "2.0.0",
  "description": "Promises based nanoresource",
  "main": "index.js",
  "files": [
    "lib",
    "index.js",
    "emitter.js",
    "nanoresource-cb.js"
  ],
  "scripts": {
    "start": "node index.js",
    "test": "jest --passWithNoTests",
    "posttest": "npm run lint",
    "lint": "xd-ns \"**/*.js\"",
    "version": "chan release --allow-yanked ${npm_package_version} && git add .",
    "prepublishOnly": "npm test"
  },
  "devDependencies": {
    "@geut/chan": "^2.0.0",
    "@geut/xd": "^1.5.0",
    "jest": "^25.1.0",
    "standard": "^14.3.1"
  },
  "jest": {
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "standard": {
    "env": [
      "jest",
      "node",
      "browser"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geut/nanoresource-promise.git"
  },
  "keywords": [
    "nanoresource",
    "promises"
  ],
  "author": {
    "name": "GEUT",
    "email": "contact@geutstudio.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/geut/nanoresource-promise/issues"
  },
  "homepage": "https://github.com/geut/nanoresource-promise#readme"
}
